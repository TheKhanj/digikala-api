{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "api": {
      "type": "object",
      "properties": {
        "client": {
          "type": "object",
          "properties": {
            "rateLimit": {
              "type": "integer",
              "description": "Sleep time between each proxy's requests in miliseconds"
            },
            "proxies": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/definitions/proxy"
                  },
                  {
                    "$ref": "#/definitions/proxy-cmd"
                  }
                ]
              }
            }
          },
          "required": [
            "proxies",
            "rateLimit"
          ]
        }
      },
      "required": [
        "client"
      ]
    }
  },
  "required": [
    "api"
  ],
  "definitions": {
    "proxy": {
      "type": "string",
      "pattern": "^[^!].*",
      "description": "Supports http, https and socks5 proxies",
      "examples": [
        "http://...",
        "https://...",
        "socks5://..."
      ]
    },
    "proxy-cmd": {
      "type": "string",
      "pattern": "^!.*",
      "description": "Executes the provided process using execl system call which is expected to return a list of proxies",
      "examples": [
        "!",
        "https://...",
        "socks5://..."
      ]
    }
  }
}
